<UserControl x:Class="FunWithLayout.FunWithDockPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FunWithLayout"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <DockPanel LastChildFill="False">
        <Rectangle Fill="White" Width="50" DockPanel.Dock="Left" Stroke="Black" StrokeThickness="2" Margin="4"/>
        <Rectangle Fill="LightGreen" DockPanel.Dock="Top" Height="50" Stroke="Black" StrokeThickness="2" Margin="4"/>
        <Rectangle Fill="Lime" DockPanel.Dock="Left" Width="50" Stroke="Black" StrokeThickness="2" Margin="4"/>
        <Rectangle Fill="Green" DockPanel.Dock="Top" Height="50" Stroke="Black" StrokeThickness="2" Margin="4"/>



    </DockPanel>
</UserControl>
