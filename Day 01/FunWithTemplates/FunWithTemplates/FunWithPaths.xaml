<UserControl x:Class="FunWithTemplates.FunWithPaths"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FunWithTemplates"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Path Fill="Green" Stroke="Black"  Width="100" Height="100" StrokeThickness="2" 
                  Data="{StaticResource owlIcon}"
                  Stretch="Uniform"/>
        <Path Fill="Yellow" Stroke="Magenta"  Width="200" Height="150" StrokeThickness="4" 
                  Data="{StaticResource owlIcon}"
                  Stretch="Uniform"/>
    </StackPanel>
</UserControl>
